{% for host in k8s_hosts_to_restore if kw not in groups.repair_pool or force_repair is defined and force_repair %}
{% set host_name = host | json_query('hostname') %}
{% set host_ip = host | json_query('ansible_host') %}
{% set host_tags = host | json_query('tags') %}
{% set have_tags = false %}
{% set ephemeral_disks = host | json_query('ephemeral_disks') %}
{% set persistent_disks = host | json_query('persistent_disks') %}
---
op: K8sHostConfig
platform: {{ platform.type }}
parameters:
  verbose: true
  config:
    ephemeral_disks: {{ ephemeral_disks | join(',') }}
{% if persistent_disks is defined and persistent_disks is iterable %}
    persistent_disks: {{ persistent_disks | join(',') }}
{% else %}
    persistent_disks:
{% endif %}
    api_scheme: {{ platform.api_scheme }}
    install_type: {{ platform.install.install_type }}
{% if host_tags is defined and host_tags is iterable %}
    tags:
{% set have_tags = true %}
{% endif %}
{% if hostvars[kw].tag_dc is defined %}
      - name: dc_tag
        value: {{ hostvars[kw].tag_dc }}
{% endif %}
{% if hostvars[kw].tag_zone is defined %}
      - name: zone_tag
        value: {{ hostvars[kw].tag_zone }}
{% endif %}
{% if hostvars[kw].tag_rack is defined %}
      - name: rack_tag
        value: {{ hostvars[kw].tag_rack }}
{% endif %}
{% if hostvars[kw].tag_ru is defined %}
      - name: ru_tag
        value: {{ hostvars[kw].tag_ru }}
{% endif %}
{% if ecp_k8s.ingress_nodes is defined and hostvars[kw].ansible_host in ecp_k8s.ingress_nodes.hosts %}
{% if have_tags == false %}
    tags:
{% set have_tags = true %}
{% endif %}
      - name: istio-ingressgateway
        value: true
{% endif %}
{% if ecp_k8s.cp_nodes is defined and hostvars[kw].ansible_host in ecp_k8s.cp_nodes.hosts %}
{% if have_tags == false %}
    tags:
{% set have_tags = true %}
{% endif %}
      - name: istio-controlplane
        value: true
      - name: openebs-controlplane
        value: true
{% endif %}
  host:
{% if kw | ipv4 %}
    internal_ip: {{ kw }}
{% else %}
    internal_ip: {{ hostvars[kw].ansible_host }}
{% endif %}
  ssh:
    username: {{ ecp_credentials.ssh.username }}
    access_type: {{ ecp_credentials.ssh.access_type }}
{% if ecp_credentials.ssh.access_type == 'password_access' %}
    password: {{ ecp_credentials.ssh.password }}
{% else %}
    keypair_file: {{ ecp_credentials.ssh.keypair_file }}
    keypair_name: {{ ecp_credentials.ssh.keypair_name }}
{% if ecp_credentials.ssh.key_passphrase is defined %}
    priv_keypair_password: {{ ecp_credentials.ssh.key_passphrase }}
{% endif %}
{% endif %}
{% endfor %}
    verbose: true