{
  "label": {
    "name": "{{ ecp_k8s.cluster.name }}",
    "description": "{{ ecp_k8s.cluster.description }}"
  },
  "k8s_version": "{{ ecp_k8s.cluster.k8s_version }}",
  "pod_network_range": "{{ ecp_k8s.cluster.pod_network_range }}",
  "service_network_range": "{{ ecp_k8s.cluster.service_network_range }}",
  "pod_dns_domain": "{{ ecp_k8s.cluster.pod_dns_domain }}",
  "addons": [],
  "k8shosts_config": [
{% for item in k8s_nodes_list %}
{% if (item.hostname in ecp_k8s.master_nodes.hosts) or (item.ansible_host in ecp_k8s.master_nodes.hosts) %} 
    {
      "node": "{{ item | json_query('host_id') }}",
      "role": "master",
    },
{% endif %}
{% if (item.hostname in ecp_k8s.ingress_nodes.hosts) or (item.ansible_host in ecp_k8s.ingress_nodes.hosts) %} 
       {
         "node": "{{ item | json_query('host_id') }}",
         "role": "worker",
       },
{% endif %}
{% if (item.hostname in ecp_k8s.cp_nodes.hosts) or (item.ansible_host in ecp_k8s.cp_nodes.hosts) %} 
       {
         "node": "{{ item | json_query('host_id') }}",
         "role": "worker",
       },
{% endif %}
{% if (item.hostname in ecp_k8s.worker_nodes.hosts) or (item.ansible_host in ecp_k8s.worker_nodes.hosts) %} 
    {
      "node": "{{ item | json_query('host_id') }}",
      "role": "worker",
{% endif %}
{% if loop.last %}
    }
{% else %}    
    },
{% endif %}
{% endfor %}
  ]
}
